{
  "name": "Web shooter",
  "version": "1.0",
  "description": "Build an Extension!",
  "permissions": [
    "activeTab",
    "declarativeContent",

    "unlimitedStorage",
    "storage",
    "desktopCapture",
    "<all_urls>",
    "clipboardWrite",
    "clipboardRead",
    "tabs",
    "webRequest",
    "http://*/*",
    "https://*/*",
    "debugger",
    "notifications"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "run_at": "document_start",
    "all_frames": true,
    "js": ["contentscript.js"]
  }],
  "web_accessible_resources": ["console.js"],
  "options_page": "options.html",
  "devtools_page": "devtools.html",
  "background": {
    "page":"background.html",
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./assets/images/bug16.png",
      "32": "./assets/images/bug32.png",
      "128": "./assets/images/bug128.png"
    }
  },
  "icons": {
    "16": "./assets/images/bug16.png",
    "32": "./assets/images/bug32.png",
    "128": "./assets/images/bug128.png"
  },
  "manifest_version": 2
}
